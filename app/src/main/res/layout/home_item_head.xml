<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <LinearLayout
            android:background="@drawable/toolbar_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginTop="@dimen/home_item_txt_title_margin_top"
                android:layout_marginBottom="@dimen/home_item_txt_title_margin_bottom"
                android:layout_marginLeft="@dimen/home_item_txt_title_margin_left"
                android:text="推荐"
                style="@style/style_txt"
                />
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
            android:overScrollMode="never"
            android:id="@+id/home_item_vp_ad"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

    </androidx.viewpager.widget.ViewPager>
</FrameLayout>
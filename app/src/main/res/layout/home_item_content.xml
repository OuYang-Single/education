<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_marginLeft="@dimen/home_item_txt_title_margin_left"
            android:layout_marginRight="@dimen/home_item_txt_title_margin_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/txt_context_item_head_title"
                android:textColor="@color/cardview_dark_background"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/home_context_item_margin"
                android:layout_marginBottom="@dimen/home_context_item_margin"

                android:text="热门推荐"
                android:textSize="16sp"
                style="@style/style_txt"
        />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_item_context_recycler_view">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
